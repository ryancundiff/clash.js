{
  "compilerOptions": {
    // Projects.
    "target": "esnext",

    // Modules.
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

  "exclude": [
    "node_modules",
    "dist",
    "types"
  ]
}
